{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["warn", "double"],
        "max-lines-per-function": ["error", {
            "max": 50,
            "skipBlankLines": true
        }],
        "eqeqeq": ["error", "smart"]
    }
}
